<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgPembina"
        android:layout_width="70dp"
        android:layout_height="72dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvNip"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="35dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/imgPembina"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNamaPembina"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="TextView"
        android:layout_marginStart="35dp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/imgPembina"
        app:layout_constraintTop_toBottomOf="@+id/tvNip" />

    <TextView
        android:id="@+id/tvJenisKelaminPembina"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="TextView"
        android:layout_marginStart="35dp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/imgPembina"
        app:layout_constraintTop_toBottomOf="@+id/tvNamaPembina" />

    <TextView
        android:id="@+id/tvNoTelp"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="TextView"
        android:textColor="#000000"
        android:layout_marginStart="35dp"
        app:layout_constraintStart_toEndOf="@+id/imgPembina"
        app:layout_constraintTop_toBottomOf="@+id/tvJenisKelaminPembina" />
</androidx.constraintlayout.widget.ConstraintLayout>
