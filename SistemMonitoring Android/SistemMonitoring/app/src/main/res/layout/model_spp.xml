<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<ImageView
    android:id="@+id/imageSpp"
    android:layout_width="79dp"
    android:layout_height="60dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/logo" />

<TextView
    android:id="@+id/tvNisSpp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="4dp"
    android:text="TextView"
    app:layout_constraintStart_toEndOf="@+id/imageSpp"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/tvNamaSpp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:text="TextView"
    app:layout_constraintStart_toEndOf="@+id/imageSpp"
    app:layout_constraintTop_toBottomOf="@+id/tvNisSpp" />

<TextView
    android:id="@+id/tvStatusSpp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:text="TextView"
    app:layout_constraintStart_toEndOf="@+id/imageSpp"
    app:layout_constraintTop_toBottomOf="@+id/tvNamaSpp" />

<TextView
    android:id="@+id/tvSemesterSpp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:text="TextView"
    app:layout_constraintStart_toEndOf="@+id/imageSpp"
    app:layout_constraintTop_toBottomOf="@+id/tvStatusSpp" />
</androidx.constraintlayout.widget.ConstraintLayout>
